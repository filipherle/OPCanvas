
{
  "manifest_version": 3,
  "name": "OPCanvas",
  "version": "0.1",
  "description": "You are welcome.",
  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
        {
            "matches": ["https://canvas.ubc.ca/courses/*/quizzes/*"],
            "js": ["scripts/quiz.js"]
        }, 
        {
            "matches": ["https://canvas.ubc.ca/*"],
            "js": ["scripts/darkMode.js"]
        }
    ],

  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://canvas.ubc.ca/*"
  ]
}
