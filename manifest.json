{
  "manifest_version": 3,
  "name": "Canvas extension",
  "version": "0.1",
  "description": "Make Canvas better",

  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },

  "content_scripts": [
    {
      "js": ["scripts/quiz.js"],
      "matches": [
        "https://canvas.ubc.ca/courses/*/quizzes/*",
        "http://canvas.ubc.ca/courses/*/quizzes/*",
        "https://canvas.ubc.ca/courses/*/quizzes/*/"
      ]
    }
  ]
}