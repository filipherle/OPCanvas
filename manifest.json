
{
  "manifest_version": 3,
  "name": "OPCanvas",
  "version": "0.1",
  "description": "You are welcome.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/quiz.js"],
      "matches": [
        "https://canvas.ubc.ca/courses/*/quizzes/*"
      ]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://canvas.ubc.ca/*"
  ]
}
