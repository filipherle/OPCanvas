
{
  "manifest_version": 3,
  "name": "OPCanvas",
  "version": "0.1",
  "description": "You are welcome.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "OP.png",
      "48": "OP.png",
      "128": "OP.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/quiz.js"],
      "matches": [
        "https://canvas.ubc.ca/courses/*/quizzes/*",
        "http://canvas.ubc.ca/courses/*/quizzes/*",
        "https://canvas.ubc.ca/courses/*/quizzes/*/"
      ]
    },
    {
      "js": ["scripts/roast.js"],
      "matches": [
        "https://canvas.ubc.ca/courses/*/grades"
        ]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://canvas.ubc.ca/*"
  ],
"icons": {
  "16": "OP.png",
  "48": "OP.png",
  "128": "OP.png"
}
}
